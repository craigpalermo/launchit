.row
  div.col-md-6(ng-controller="RegistrationCtrl")
    h2 Sign Up
    form#signup(role="form", ng-submit='register()')

      span {{ message }}

      div.form-group
        input.form-control(type="email", ng-model='email', placeholder="Email", required)
      div.form-group
        input.form-control(type="text", ng-model='username', placeholder="Username")
      div.form-group
        input.form-control(type="password", ng-model='password', placeholder="Password", required)
      div.form-group
        input.form-control(type="password", ng-model='confPassword', placeholder="Confirm password", required)
      div.form-group
        input.form-control(type="text", ng-model='zipcode', placeholder="Zip code", minlength='5', maxlength='5', required)
      
      button.btn.btn-default(type="submit") Register

  div.col-md-6(ng-controller="LoginCtrl")
    h2 Sign In
    form#signin(role="form", ng-submit="login()")
      span {{ message }}

      div.form-group
        input.form-control(type="text", ng-model="username", placeholder="Username")
      div.form-group
        input.form-control(type="password", ng-model="password", placeholder="Password")
      button.btn.btn-default(type="submit") Sign In
